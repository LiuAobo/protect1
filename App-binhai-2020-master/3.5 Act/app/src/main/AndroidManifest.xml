<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.act">
    <!-- 拨打电话 -->
    <uses-permission android:name="android.permission.CALL_PHONE" /> <!-- 发送短信 -->
    <uses-permission android:name="android.permission.SEND_SMS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ActResponseActivity" />
        <activity
            android:name=".ActRequestActivity"
            android:exported="true" />
        <activity
            android:name=".ActUriActivity"
            android:exported="true" />
        <activity
            android:name=".ActHomeActivity"
            android:exported="true" />
        <activity
            android:name=".ActRotateActivity"
            android:exported="true" />
        <activity android:name=".ActNextActivity" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>